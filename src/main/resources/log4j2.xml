<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" packages="org.springframework.samples.petclinic" monitorInterval="300">
    <Appenders>
	    <Console name="console" target="SYSTEM_OUT">
	      <PatternLayout pattern="%d [%X{uniqDV}] %-5level (%c{1.}:%L) - %msg%n"/>
	    </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>

</Configuration>
